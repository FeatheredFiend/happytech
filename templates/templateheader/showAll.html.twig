{% extends 'base.html.twig' %}

{% block title %}View Template Headers{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <div class="card-body">
          <div class="card-header">
<h2 class="text-center">Template Header Details</h2>
<button type="button" class="btn btn-outline-primary btn-block"><a class="nav-link" href="{{ path('templateheader_create') }}">Create Template Header</a></button></div>
          {% if app.user != null %}
<label class="form-label" for="templateheaderfilter">Filter Template Headers</label>
<input class="form-control" id="templateheaderfilter" name="templateheaderfilter" value="">
          <table class="table">
            <tr>
              <th>Template Header ID</th>
              <th>Name</th>
              <th>User</th>
              <th>Feedback Type</th>
              <th>Decommissioned</th>
            </tr>
            {% for templateheader in templateheader %}
            {% set id = templateheader.id %}
	<tbody name="templateheadertable" id="templateheadertable">
            <tr>
              <td><a class="nav-link" href="{{ path('templateheader_edit', {'id': templateheader.id}) }}">{{ templateheader.id}}</a></td>
              <td>{{ templateheader.name }}</td>
              <td>{{ templateheader.user }}</td>
              <td>{{ templateheader.feedbacktype }}</td>
              <td>{{ templateheader.decommissioned ? 'Yes' : 'No' }}</td>
            </tr>
	</tbody>
            {% endfor %}
          </table>
          {% endif %}
        </div>
      </div>
</div>
 <script>
$(document).ready(function(){
  $("#templateheaderfilter").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#templateheadertable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script> 
{% endblock %}
