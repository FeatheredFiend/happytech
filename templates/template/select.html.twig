{% extends 'base.html.twig' %}
{% block title %}Template Select{% endblock %}
{% block body %}
<style>
   .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
   .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
   <div class="card-body">
      <div class="card-header table-responsive-xl">
         <h2 class="text-center">Template Select</h2>
         {% if app.user != null %}
         <table class="table table-striped">
            <thead>
               <tr>
                  <th>Template ID</th>
                  <th>Template name</th>
                  <th>Template Header ID</th>
               </tr>
            </thead>
            <tbody>
               {% for template in pagination %}
               {% set id = template.id %}
               <tr>
                  <td><a class="nav-link" href="{{ path('template_use', {'id': template.id}) }}">{{ template.id}}</a></td>
                  <td>{{ template.name }}</td>
                  <td>{{ template.header }}</td>
               </tr>
               {% endfor %}
            </tbody>
         </table>
         {{ knp_pagination_render(pagination, null, {}, {
         'align': 'center',
         'size': 'large',
         'rounded': true,
         }) }}
         {% endif %}
      </div>
   </div>
</div>
{% endblock %}
