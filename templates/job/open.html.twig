{% extends 'base.html.twig' %}

{% block title %}Job Applicants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
select {width: 33%;}
</style>

<div class="example-wrapper">
        <div class="card-body">
          <div class="card-header table-responsive-xl">
<h2 class="text-center">Job Applicants</h2>
          {% if app.user != null %}
          <table class="table table-striped">
            <tr>
              <th>Job Name</th>
              <th>Applicant Name</th>

            </tr>
            {% for job in job %}
            <tr>
              <td>{{ job.job }}</td>
              <td><a class="nav-link" href="{{ path('template_select', {'name': job.applicant}) }}">{{ job.applicant}}</a></td>
            </tr>
            {% endfor %}
          </table>
          {% endif %}
        </div>
      </div>
</div>
{% endblock %}
