{% extends 'base.html.twig' %}

{% block title %}Edit Job{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .largeinput { height: 100px; word-wrap: break-word}
select {width: 33%;}
</style>

<div class="example-wrapper">
        <div class="card-body">
          <div class="card-header table-responsive-xl">Edit Job</div>
          {% if app.user != null %}
          {{ form_start(form) }}
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.description, {'attr': {'class': 'form-control largeinput' }}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.jobcategory, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.duedate, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(form.decommissioned, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 col-md-offset-4" style="margin-top:5px;">
              <button type="submit" class="btn btn-primary btn-block">
                <i class="fa fa-btn fa-user"></i> Edit Job
              </button>
            </div>
          </div>
          {{ form_end(form) }}
          {% endif %}
        </div>
      </div>
</div>
{% endblock %}
