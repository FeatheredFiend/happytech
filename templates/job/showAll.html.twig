{% extends 'base.html.twig' %}

{% block title %}View Jobs{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <div class="card-body">
          <div class="card-header">
<h2 class="text-center">Job Details</h2>
<button type="button" class="btn btn-outline-primary btn-block"><a class="nav-link" href="{{ path('job_create') }}">Create Job</a></button></div>
          {% if app.user != null %}
<label class="form-label" for="jobfilter">Filter Jobs</label>
<input class="form-control" id="jobfilter" name="jobfilter" value="">
          <table class="table">
            <tr>
              <th>Job ID</th>
              <th>Job Name</th>
              <th>Job Description</th>
              <th>Job Category</th>
              <th>Job End Date</th>
              <th>Decommissioned</th>
            </tr>
            {% for job in job %}
            {% set id = job.id %}
	<tbody name="jobtable" id="jobtable">
            <tr>
              <td><a class="nav-link" href="{{ path('job_edit', {'id': job.id}) }}">{{ job.id}}</a></td>
              <td>{{ job.name }}</td>
              <td>{{ job.description }}</td>
              <td>{{ job.jobcategory }}</td>
              <td>{{ job.duedate|date('d-m-Y') }}</td>
              <td>{{ job.decommissioned ? 'Yes' : 'No' }}</td>
            </tr>
	</tbody>
            {% endfor %}
          </table>
          {% endif %}
        </div>
      </div>
</div>
 <script>
$(document).ready(function(){
  $("#jobfilter").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#jobtable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script> 
{% endblock %}

