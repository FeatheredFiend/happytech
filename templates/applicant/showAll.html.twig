{% extends 'base.html.twig' %}

{% block title %}View Applicants{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <div class="card-body">
          <div class="card-header">
<h2 class="text-center">Applicant Details</h2>
<button type="button" class="btn btn-outline-primary btn-block"><a class="nav-link" href="{{ path('applicant_create') }}">Create Applicant</a></button></div>
          {% if app.user != null %}
<label class="form-label" for="applicantfilter">Filter Applicants</label>
<input class="form-control" id="applicantfilter" name="applicantfilter" value="">
          <table class="table">
            <tr>
              <th>Applicant ID</th>
              <th>Applicant Name</th>
              <th>Email Address</th>
              <th>Decommissioned</th>
            </tr>
            {% for applicant in applicant %}
            {% set id = applicant.id %}
	<tbody name="applicanttable" id="applicanttable">
            <tr>
              <td><a class="nav-link" href="{{ path('applicant_edit', {'id': applicant.id}) }}">{{ applicant.id}}</a></td>
              <td>{{ applicant.name }}</td>
              <td>{{ applicant.email }}</td>
              <td>{{ applicant.decommissioned ? 'Yes' : 'No' }}</td>
            </tr>
	</tbody>
            {% endfor %}
          </table>
          {% endif %}
        </div>
      </div>
</div>
 <script>
$(document).ready(function(){
  $("#applicantfilter").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#applicanttable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script> 
{% endblock %}

